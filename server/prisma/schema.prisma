generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement()) // Unique identifier for the user
  nama          String // User's full name
  email         String   @unique // User's email address, must be unique
  nomorTelepon  String // User's phone number
  statusAktif   Boolean  @default(true) // User's active status (true for active, false for inactive)
  departemen    String // User's department
  createdAt     DateTime @default(now()) // Timestamp for when the user record was created
  updatedAt     DateTime @updatedAt // Timestamp for the last update of the user record
}