{
    "version": 2,
    "builds": [
        {
            "src": "server/src/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/src/index.ts"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/client/assets/$1"
        },
        {
            "src": "/vite.svg",
            "dest": "/client/vite.svg"
        },
        {
            "src": "/favicon.ico",
            "dest": "/client/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ]
}
